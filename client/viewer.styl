body
	color #555
	font-family arial
img
	margin 10px
	box-shadow 0 0 5px #aaa
	cursor pointer
	&:hover
		box-shadow 0 0 10px #777

#post-info
	display none
	position fixed
	left 10px
	top 10px
	background rgba(0, 0, 0, 0.8)
	width 500px
	height 400px
	border-radius 3px
	box-shadow 0 0 5px #aaa
	padding 10px

	.wrap
		width 100%
		height 100%
		overflow auto

	table
		font-size 14px
		color #00b1ff
		box-shadow 0 0 3px #aaa
		border-radius 3px
		padding 5px

		tr
			&:nth-child(even)
				background rgba(200, 200, 200, 0.2)

			td
				padding 5px 10px

				a
					color #ff7366

				&:nth-child(2)
					word-break break-all
					color #fff
