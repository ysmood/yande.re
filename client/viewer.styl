
body
	color #555
	font-family arial

.help
	h4
		margin 10px 0
	ul
		margin 10px 0
		padding-left 25px

#dashboard
	position fixed
	bottom 10px
	left 10px
	color #fff
	background rgba(0, 0, 0, 0.7)
	box-shadow 0 0 3px #5a4459
	padding 6px 20px
	border-radius 100px
	font-size 13px
	input
		border-radius 0
		border 1px solid #ccc
		border-radius 100px
		box-shadow 0 1px 1px rgba(0,0,0,.075) inset
		padding 3px 10px
		&:focus
			border-color #66afe9
			box-shadow inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6)
			outline none
		&:hover
			border-color #fff
			box-shadow 0 0 3px #fff
	input[type="submit"]
		background #fff
		color: rgb(9, 109, 202);
		font-weight: bold

.img_list_view
	.col
		float left
		.img
			$margin = 2%
			margin $margin
			width 100% - $margin * 2
			box-sizing border-box
			box-shadow 0 0 5px #aaa
			border-radius 3px
			cursor pointer
			&:hover
				box-shadow 0 0 10px #777
		.img.show
			width auto

.page_num
	text-align: center;
	border: 1px dashed #ABA5C0;
	padding: 5px;
	margin: 40px 5px;
	background: rgba(208, 223, 255, 0.42);
	border-radius: 22px;
	clear both

#img-show
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	display none
	box-sizing border-box
	overflow auto
	background rgba(0, 0, 0, 0.8)
	.img
		margin auto
		display block
		box-sizing border-box
		padding 2%

#post-info
	margin 30px

	.wrap
		width 100%
		height 100%
		overflow auto

	table
		width 100%
		font-size 14px
		color #00b1ff
		border-radius 3px
		padding 5px

		tr
			&:nth-child(even)
				background rgba(200, 200, 200, 0.2)

			td
				padding 5px 10px

				a
					color #ff7366

				&:nth-child(2)
					word-break break-all
					color #fff

#tools
	display none
	position absolute
	left 0
	top 0

	a
		color #973986
		font-size 13px
		text-decoration none
		border 1px dashed #999
		padding 2px 8px
		border-radius 30px
		background rgba(255, 255, 255, 0.8)
